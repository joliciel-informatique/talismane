<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="jar" name="talismane-terminology-all">
    <import file="ant/global.xml"/>
	<target name="jar">
		<subant target="one-jar">
			<fileset dir=".">
				<include name="talismane_term_extractor/build.xml"/>
			</fileset>
		</subant>
		<subant target="one-jar">
			<fileset dir=".">
				<include name="talismane_term_viewer/build.xml"/>
			</fileset>
		</subant>
	</target>
	
	<target name="clean">
		<subant target="clean">
			<fileset dir=".">
				<include name="talismane_term_extractor/build.xml"/>
			</fileset>
		</subant>
		<subant target="clean">
			<fileset dir=".">
				<include name="talismane_term_viewer/build.xml"/>
			</fileset>
		</subant>
	</target>
</project>
