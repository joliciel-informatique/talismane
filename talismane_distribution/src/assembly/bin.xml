<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>bin</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>../talismane_core/target</directory>
      <includes>
        <include>*-shaded.jar</include>
      </includes>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../talismane_extensions/target</directory>
      <includes>
        <include>*-shaded.jar</include>
      </includes>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../examples</directory>
      <outputDirectory>examples</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../talismane_core/languagePacks</directory>
      <outputDirectory>languagePacks</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
